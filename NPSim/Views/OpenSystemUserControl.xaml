<UserControl x:Class="NPSim.Views.OpenSystemUserControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:NPSim.Views"
             mc:Ignorable="d">
    <Canvas>
        <StackPanel Loaded="OpenSystemCanvasElement_Loaded">
            <Image Width="50" Height="50" Source="/Views/Images/computer.png"/>
            <TextBlock HorizontalAlignment="Center" FontSize="14" FontWeight="DemiBold" Text="{Binding DisplayName}"/>
        </StackPanel>
    </Canvas>
</UserControl>
