<Window x:Class="NPSim.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:NPSim"
        mc:Ignorable="d"
        Title="NPSim" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="25"></RowDefinition>
            <RowDefinition></RowDefinition>
        </Grid.RowDefinitions>
        <Menu Height="25" VerticalAlignment="Top" Grid.Row="0">
            <MenuItem Header="Devices">
                <MenuItem Header="Computer" Click="ComputerMenuItem_Click"/>
            </MenuItem>
            <MenuItem Header="Connections">
                <MenuItem Header="PhysicalMedia" Click="PhysicalMediaMenuItem_Click"/>
            </MenuItem>
            <MenuItem Header="Traffic">
                <MenuItem Header="Send data" Click="SendDataMenuItem_Click"/>
            </MenuItem>
        </Menu>
        <Grid Grid.Row="1">
            <Canvas Name="SimulationCanvas"></Canvas>
        </Grid>
    </Grid>
</Window>
